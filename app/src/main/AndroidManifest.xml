<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="empmanager.alochol.empmanager">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".base.BaseAppliction"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.LoginActivity"
            android:windowSoftInputMode="adjustPan|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.HomeActivity" android:launchMode="singleTask" />
        <activity android:name=".ui.RegisterActivity" />
        <activity android:name=".ui.AddUserActivity" />
        <activity android:name=".ui.AddEmployeeActivity" />
        <activity android:name=".ui.ManagerUserActivity" />
        <activity android:name=".ui.ManagerEmployeeActivity" />
        <activity android:name=".ui.ListUserActivity" />
        <activity android:name=".ui.ListEmpActivity" />
        <activity android:name=".ui.EmployeeEditActivity" />
        <activity android:name=".ui.UserEditActivity" />
        <activity android:name=".ui.SettingActivity" />
    </application>

</manifest>