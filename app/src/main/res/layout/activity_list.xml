<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@color/setting_bg" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/include_title" />
    <FrameLayout android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout android:orientation="vertical"
             android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <empmanager.alochol.empmanager.wedgit.XListView
                android:id="@+id/list_record"
                android:background="@null"
                android:fadingEdge="none"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:cacheColorHint="#00000000"
                android:divider="@null"
                android:dividerHeight="20.0dip"
                android:fastScrollEnabled="false"
                android:headerDividersEnabled="false"
                android:footerDividersEnabled="false"
                android:smoothScrollbar="true" />
        </LinearLayout>
        <ImageView android:layout_gravity="center"
            android:id="@+id/iv_NoRecords"
            android:background="@drawable/none_prompt"
            android:visibility="gone"
            android:layout_width="70.0dip"
            android:layout_height="70.0dip"
            android:contentDescription="@null" />
        <include layout="@layout/progress_bar" />
    </FrameLayout>
</LinearLayout>